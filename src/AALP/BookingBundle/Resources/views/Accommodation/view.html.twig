{# src/OC/PlatformBundle/Resources/views/Accommodation/view.html.twig #}

{% extends "AALPBookingBundle::layout.html.twig" %}

{% block aalpbooking_body %}

  <h2>Affichage du logement n°{{ id }} !</h2>


    <div>
      {# On affiche tous les messages flash dont le nom est « notice » #}
      {% for message in app.session.flashbag.get('notice') %}
        <p>Message flash : {{ message }}</p>
      {% endfor %}
    </div>

    <p>
      Ici nous pourrons lire l'annonce ayant comme id : {{ id }}<br />
      Mais pour l'instant, nous ne savons pas encore le faire, cela viendra !
	  J'ai hâte de voir ça !
    </p>

{% endblock %}
